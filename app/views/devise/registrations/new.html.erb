<div class="sign-up-form-container">
  <h2 class="homepage-heading text-center">Sign up</h2>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'form-horizontal' }) do |f| %>
    <%= f.error_notification %>
      <%= f.input :username,
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "username" },
                  wrapper_html: { class: 'col-sm-8 mx-auto' },
                  label_html: { class: 'listing-paragraph col-sm-2 control-label' } %>
      <%= f.input :fullname,
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "fullname" },
                  wrapper_html: { class: 'col-sm-8 mx-auto' },
                  label_html: { class: 'listing-paragraph col-sm-2 control-label' } %>
      <%= f.input :gender,
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "gender" },
                  wrapper_html: { class: 'col-sm-8 mx-auto' },
                  label_html: { class: 'listing-paragraph col-sm-2 control-label' },
                  collection: [['Male', 'Male'], ['Female', 'Female']],
                  as: :radio_buttons %>
      <%= f.input :email,
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "email" },
                  wrapper_html: { class: 'col-sm-8 mx-auto' },
                  label_html: { class: 'listing-paragraph col-sm-2 control-label' } %>
      <%= f.input :address,
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "address" },
                  wrapper_html: { class: 'col-sm-8 mx-auto' },
                  label_html: { class: 'listing-paragraph col-sm-2 control-label' } %>
      <%= f.input :phone_number,
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "phone_number" },
                  wrapper_html: { class: 'col-sm-8 mx-auto' },
                  label_html: { class: 'listing-paragraph col-sm-2 control-label' } %>
      <%= f.input :photo, as: :file,
                  wrapper_html: { class: 'col-sm-8 mx-auto' },
                  label_html: { class: 'listing-paragraph col-sm-2 control-label' } %>
      <p>Are you a trainer?</p>
      <%= f.check_box :trainer %>
      <%= f.input :password,
                  required: true,
                  hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                  input_html: { autocomplete: "new-password" },
                  wrapper_html: { class: 'col-sm-8 mx-auto' },
                  label_html: { class: 'listing-paragraph col-sm-2 control-label' } %>
      <%= f.input :password_confirmation,
                  required: true,
                  input_html: { autocomplete: "new-password" },
                  wrapper_html: { class: 'col-sm-8 mx-auto' },
                  label_html: { class: 'listing-paragraph col-sm-2 control-label' } %>
        <%= f.button :submit, "Sign up", class: 'btn btn-outline-light', data: { disable_with: 'Signing up...' } %>
        <br>
        <%= render "devise/shared/links"%>
      </div>
    </div>
  <% end %>

</div>
