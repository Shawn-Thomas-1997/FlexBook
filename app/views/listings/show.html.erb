<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://res.cloudinary.com/dcy2dfahw/image/upload/v1695299259/victor-freitas-WvDYdXDzkhs-unsplash_mqvxo5.jpg);">
</div>

<div class="listing-show-container">
  <% if user_signed_in? %>
    <div class="listing-container">
          <% user = User.find(@listing.user_id) %>
          <% if @listing.photo.present? %>
          <%= cl_image_tag @listing.photo.key, height: 300, width: 400, crop: :fill %>
          <% else %>
          <%= image_tag "https://res.cloudinary.com/dcy2dfahw/image/upload/v1695044898/dumbbell_l3d5ls.png", class:"profile-photo" %>
          <% end %>
          <h1 class="listing-heading"><%= @fullname = user.fullname.titleize %></h1>
        <h3 class="listing-sub-heading"><%= @listing.category %></h3>
        <h4 class="listing-paragraph"><%= @listing.location %></h4>
        <p class="listing-paragraph"><%= @listing.details %></p>
    </div>
  </div>
</div>
<br>
<br>
<div class="reviews">
    <div class="listing-show-links">
    <h4 class="listing-sub-heading">Reviews</h4>
    <ul class="list-group m-4">
    <% @reviews.each do |review| %>
      <div class="review">
        <li class="review-group-item"><%= review.content %></li>
        <div class="d-flex justify-content-center align-items-center">
          <div class="review-group-item">
            <p>Rating:</p>
            <div class="star <%= 'filled' if review.rating >= 1 %>"></div>
            <div class="star <%= 'filled' if review.rating >= 2 %>"></div>
            <div class="star <%= 'filled' if review.rating >= 3 %>"></div>
            <div class="star <%= 'filled' if review.rating >= 4 %>"></div>
            <div class="star <%= 'filled' if review.rating >= 5 %>"></div>
          </div>
        </div>
      </div>
    <% end %>
  </ul>
  </div>
</div>

  <div class="listing-show-links">
      <%= link_to "Make a Booking", new_listing_booking_path(@listing, @booking), class: "btn btn-outline-light" %>
    </div>
    <div class="listing-show-links">
      <br>
      <%= link_to "Back to Home", root_path, class: "btn btn-outline-light" %>
  </div>
  <% else %>
  <%= render 'shared/log_in_prompt' %>
  <% end %>
